#!/bin/zsh

zplug "zplug/zplug"
zplug "willghatch/zsh-hooks"
zplug "mafredri/zsh-async"

zplug "b4b4r07/emoji-cli"

# Was nice but constantly breaks =/
#zplug "kennethreitz/autoeznv"

#zplug "MichaelAquilina/zsh-autoswitch-virtualenv"
zplug "Tarrasch/zsh-autoenv"

zplug "Tarrasch/zsh-functional"
zplug "Tarrasch/zsh-colors"
zplug "Tarrasch/zsh-bd"

zplug 'LockonS/terminal-workload-report'

zplug 'aphelionz/strerror.plugin.zsh'

zplug "akatrevorjay/composure"
zplug "akatrevorjay/fasd"

zplug "psprint/zsnapshot"  # , lazy:true
zplug "mollifier/zload"  # , lazy:true

#GENCOMPL_FPATH=$LOCAL_ZDOTDIR/completions
#[ -d $GENCOMPL_FPATH ] || mkdir -pv $GENCOMPL_FPATH
#zplug "RobSis/zsh-completion-generator"

#zplug "spwhitt/nix-zsh-completions"

zplug "zsh-users/zsh-completions", nice:8

zplug "hlissner/zsh-autopair", nice:10
zplug "zsh-users/zsh-history-substring-search", nice:10
zplug "zsh-users/zsh-syntax-highlighting", nice:12

for p in ${^ZDOTDIRS}/plugins/*(-/); do
    first_char=${${p:t}:0:1}
    if [[ $first_char = [0-9] ]]; then
        nice=$first_char
    else
        nice=5
    fi

    zplug "$p", from:local, nice:$nice
done

