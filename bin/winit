#!/usr/bin/env zsh

##
## monitors
##

~/bin/xrandr-auto &
sleep 1 && nvidia-settings -l &

# load recent bg
[[ ! -e $HOME/.fehbg ]] || $HOME/.fehbg &

##
## input
##

#wm &
inputplug -d -0 -c $HOME/.config/inputplug/hook &
#imwheel -b '4 5 6 7' -k -p -r -d &
#tkbd &

##
## base
##

compton &

#xsettingsd &
gsd-launch &

sleep 1

# gnome-keyring-daemon &
# seahorse-daemon &

/usr/lib/gcr/gcr-prompter &
/usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1 &
#/usr/lib/x86_64-linux-gnu/libexec/kdeconnectd &
/usr/lib/x86_64-linux-gnu/xfce4/notifyd/xfce4-notifyd &

polybar example &
polybar mybar &

sleep 1

case $HOST in
	fatbookho*)
		usbguard-applet-qt &
		nm-applet &
		ckb --background &
		solaar &
		pasystray &

		parcellite &
		indicator-kdeconnect &
		#notify-proxy &
		variety &
		;;
	notsofatbookho*)
		gpomme &
		;;
esac

# yubioath gui -t &
# easystroke &
#kupfer &

#(( ! ${+commands[wal]} )) \
#  || wal -i $(< $HOME/.cache/wal/wal)

#xdg-autostart &

wait
