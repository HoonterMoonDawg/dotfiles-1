#!/bin/zsh
set -eo pipefail
set -xv

[[ -n $1 ]] || set -- "$HOME" "${@:2}"
root=$1; shift
name=${${root#/}//\//_}

cmd=()
#[[ $UID -eq 0 ]] || cmd+=(sudo -E --)

cmd+=(
  borg create
  #-C lz4
  #-C zlib,9
  -C lzma,9
  -v
  -s
  -p
  --exclude-from $HOME/.config/borg/exclude
  --exclude-caches
  --keep-tag-files
  "$BORG_REPO::{hostname}-{user}-${name}-{now}"
  "$@" $root
)

exec $=cmd
