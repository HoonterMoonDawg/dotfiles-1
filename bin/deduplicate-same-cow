#!/usr/bin/env zsh
set -eo pipefail
set -xv

dir=${1:-$PWD}

hashfile=$HOME/.local/share/dupremove.hashes
# bs=128k
bs=8k

on-exit() {
	sudo chown $USER:$USER $hashfile
}
trap on-exit EXIT

cmd=(
	duperemove
	--hashfile=$hashfile
	-A  # open +r not +rx (def for root)
	-x  # do not cross fs boundaries (def)
	-r  # recurse
	-d  # dedupe same blocks in fs: only works on btrfs and xfs
	# -b $bs  # blocksize
	# dedupe in same file
	--dedupe-options=same
	-h $dir
)

sudo $cmd

